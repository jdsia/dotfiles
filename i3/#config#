# run terminal with custom app_id, smaller font, and lighter opacity
exec alacritty --class popup_term \
    --option colors.primary.background=#101010 \
    --option window.opacity=0.8 \
    --option font.size=9.5 \
    -e tmux 

# resize/move it to the top ~20% of the screen and put it on scratchpad
for_window [instance="^popup_term"] floating enable, border none, resize set 1920 600, move absolute position 0 0, mark popup_term, move scratchpad, sticky enable
# bring it up with $mod+v
bindsym $mod+Tab [instance="^popup_term$"] scratchpad show


